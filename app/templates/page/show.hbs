<div class="type-{{model.type}} type-{{model.format}}">
  <article class="type-system-sans type-{{model.format}}">
    <img {{bind-attr src=model.featured_image.source}} class="image-header" style="width: 100%;">
    <h2 class="ui header divided">{{{model.title}}}</h2>
    {{{model.content}}}
  </article>
  
  <aside>
    
    <div class="ui divided selection list meta">
      <h3>Page Atributes</h3>
      <a class="item">
        <div class="ui green horizontal label">ID</div>
        {{model.id}}
      </a>
      <a class="item">
        <div class="ui green horizontal label">Status</div>
         {{model.status}}
      </a>
      <a class="item">
        <div class="ui green horizontal label">Type</div>
        {{model.type}}
      </a>
      <a class="item">
        <div class="ui horizontal label">Date</div>
        {{month-and-day model.date}}
      </a>
      <a class="item">
        <div class="ui horizontal label">Modified</div>
        {{time-ago-in-words model.modified}}
      </a>
      <a class="item">
        <div class="ui horizontal label">Link</div>
        {{model.link}}
      </a>
      <a class="item">
        <div class="ui medium image">
          <img {{bind-attr src=model.featured_image.source}} >
        </div>
        <div class="ui horizontal label">Featured image</div>
      </a>
    </div>
  </aside>
</div>

