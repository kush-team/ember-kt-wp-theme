<div class="type-{{post.type}}">
  
  <div class="ui medium image" post-id={{post.slug}}>
  
  {{#if post.featured_image }}
  <img {{bind-attr src=post.featured_image.source}} >
  {{else}}
  <img src="http://semantic-ui.com/images/wireframe/image.png" >
  {{/if}}
  </div>

    <article class="content-{{post.type}}" >
      <a {{action 'smartGoBack'}} class="ui button">
      {{fa-icon 'long-arrow-left'}}
      Volver  
    </a>
      <div class="header">{{{post.title}}}</div>
      {{{post.excerpt}}}
      <div class="meta">
            <span class="price">{{post.status}}</span>
            <span class="stay">{{post.type}}</span>
            <span class="stay">{{time-ago-in-words post.date_gmt}}</span>
      </div>
      <div class="description">
        <p>{{{post.content}}}</p>
      </div>
    </article>

</div>