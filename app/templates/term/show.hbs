<div class="type-term">
<h2>{{model.term.name}}</h2>

<div class="ui items" style="min-height: 100vh;">
	{{#each model.posts as |post|}}
		<div class="item" >
		    <div class="ui small image" post-id={{post.slug}}>
			{{#if post.featured_image }}
				<img {{bind-attr src=post.featured_image.source}} >
			{{else}}
				<img src="http://semantic-ui.com/images/wireframe/image.png">
			{{/if}}
		    </div>
		    <div class="content" >
		      {{#link-to 'post.show' post.slug class="header"}} {{{post.title}}} {{/link-to}}
		      <div class="meta">
		        <span class="price">{{post.status}}</span>
		        <span class="stay">{{post.type}}</span>
		        <span class="stay">{{time-ago-in-words post.date_gmt}}</span>
		      </div>
		      <div class="description">
		        <p>{{{post.excerpt}}}</p>
		        {{#if post.sticky}}
		         <div class="ui horizontal label green">Sticky</div>
		        {{/if}}
		        
		      </div>
		    </div>
			
		</div>
	{{/each}}
</div>
</div>


